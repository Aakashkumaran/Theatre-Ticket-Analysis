        display: inline-block;
        text-align: center;
        border-radius: 10px;
        width: 170px;
    }
    </style>
    <form action="/uquery1/ans" method="post">
        <label class="form-label">Enter Movie ID: 
            <select name="movie_id" id="uquery1disp">
                <% for(var i=0; i < data.length; i++) { %>
                    <option value="<%= data[i].movie_id %>"><%= data[i].movie_id %></option>
                <% } %>
            </select>
        </label><br><br>
        <label class="form-label">Enter the New Name: 
           <input type="text" name="name">
        </label><br>
        <br>      
